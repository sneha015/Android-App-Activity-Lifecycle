<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#1DF1DC"
    tools:context="com.example.lokisneha.trial.ActivityA">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1DF1DC"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#1DF1DC"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1DF1DC"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.example.lokisneha.trial.ActivityA"
        >

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Start Activity B"
            android:id="@+id/activity_b"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="51dp" />

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Dialog"
            android:id="@+id/dialog"
            android:layout_alignTop="@+id/activity_b"
            android:layout_toRightOf="@+id/close"
            android:layout_toEndOf="@+id/close" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Close App"
            android:id="@+id/close"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="190dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thread Counter:"
            android:textSize="20sp"
            android:id="@+id/counter_label"
            android:layout_alignTop="@+id/counter"
            android:layout_toLeftOf="@+id/counter"
            android:layout_toStartOf="@+id/counter" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0000"
            android:textSize="20sp"
            android:id="@+id/counter"
            android:layout_above="@+id/close"
            android:layout_alignRight="@+id/activity_b"
            android:layout_alignEnd="@+id/activity_b"
            android:layout_marginBottom="80dp" />

    </RelativeLayout>



</android.support.design.widget.CoordinatorLayout>
